<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">
    <portlet>
        <description>AIL Content Browser Portlet</description>
        <portlet-name>ContentBrowserPortlet</portlet-name>
        <display-name>Content Browser</display-name>
        <portlet-class>com.ail.core.portlet.contentbrowser.ContentBrowserPortlet</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>

        <portlet-info>
            <title>Content Browser Portlet</title>
            <short-title>content-browser</short-title>
        </portlet-info>
        
        <portlet-preferences>
          <preference>
            <name>homePageUrl</name>
            <value>http://localhost:8080/alfresco/download/direct?path=/Company%20Home/Guest%20Home/Greetings</value>
          </preference>
        </portlet-preferences>
    </portlet>
</portlet-app>