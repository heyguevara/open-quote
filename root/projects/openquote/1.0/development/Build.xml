<project name="development" default="build">
  <property name="build.sysclasspath" value="first" />
  <property name="cache.dir" value="${basedir}/repo" />
  <import file="BuildRepositoryMacros.xml" />

  <classfileset includes="build/bootstrap/*.jar" />

  <target name="clean" description="clear the build/lib folder">
    <delete dir="build/lib" />
  </target>

  <target name="build">
    <repo-get-macro repo="localhost/repo" group="alfresco" artifact="alfresco-web-services" version="1.4" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="localhost/repo" group="bouncycastle" artifact="bouncycastle" version="1.29.mg" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="localhost/repo" group="bsh" artifact="bsh" version="2.0b4" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="localhost/repo" group="jaxrpc" artifact="jaxrpc" version="1.0" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="localhost/repo" group="jboss" artifact="activation" version="1.0.2" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="localhost/repo" group="sun" artifact="mail" version="1.3.1" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="localhost/repo" group="sun" artifact="saaj" version="1.2" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="localhost/repo" group="wss4j" artifact="wss4j" version="1.4.2_08-b03" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="axis" artifact="axis" version="1.2" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="axis" artifact="axis-ant" version="1.4" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="bsf" artifact="bsf" version="2.3.0" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="commons-discovery" artifact="commons-discovery" version="0.2" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="commons-httpclient" artifact="commons-httpclient" version="2.0" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="commons-jxpath" artifact="commons-jxpath" version="1.1" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="commons-logging" artifact="commons-logging" version="1.1" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="commons-net" artifact="commons-net" version="1.1.0" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="jdom" artifact="jdom" version="1.0" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="junit" artifact="junit" version="3.7" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="mysql" artifact="mysql-connector-java" version="3.1.11" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="wsdl4j" artifact="wsdl4j" version="1.5.1" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="xalan" artifact="xalan" version="2.6.0" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="xfire" artifact="opensaml" version="1.0.1" type="jar" dest="${user.home}/.ant/lib" />
    <repo-get-macro repo="repo1.maven.org/maven2" group="xml-security" artifact="xmlsec" version="1.2.1" type="jar" dest="${user.home}/.ant/lib" />
  </target>

  <target name="setup" description="download all the jars the build system itself needs" depends="build" />

  <target name="teardown" description="clear out the jars downloaded by 'setup'" depends="clean">
    <delete dir="${cache.dir}" />
  </target>
</project>
