<project default="build" name="core:content">
  <import file="../BuildSettings.xml" />

  <target name="clean" description="delete everything that the build can generate">
  </target>

  <target name="_build">
    <build-cms-macro toSpace="/app:company_home" username="admin" password="admin"/>
  </target>

  <target name="build" description="compile (generate, copy, etc) all build outputs">
    <antcall target="_build" />
  </target>

  <target name="setup" description="run all the one-time-only steps - like copying libs into place">
    <parallel>
      <start-jboss-macro />
      <sequential>
        <waitfor maxwait="10" maxwaitunit="minute" checkevery="250">
          <http url="http://localhost:8080/alfresco"/>
        </waitfor>        
        <antcall target="_build"/>
        <stop-jboss-macro />
      </sequential>
    </parallel>
  </target>

  <target name="teardown" description="undo whatever setup did">
  </target>

	<target name="testuploader" description="test cms uploader">
	</target>
</project>
