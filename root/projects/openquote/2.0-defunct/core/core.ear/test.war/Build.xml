<?xml version="1.0" encoding="ISO-8859-1"?>
<!--
 Build file for the test war project
-->

<project default="build" name="core:core.ear/test.war">
  <import file="../../BuildSettings.xml" />

  <target name="clean" description="delete everything that the build can generate">
    <delete-exploded-war-macro />
  </target>

  <target name="_build">
    <compile-exploded-war-macro>
      <javac-classpath>
        <fileset dir="${output.dir}/WEB-INF/lib" includes="*.jar" />
        <dirset dir="${ear.dir}" includes="*.jar" />
        <fileset dir="${ear.dir}/lib" includes="*.jar" />
        <dirset dir="${ear.dir}/lib" includes="*.jar" />
        <fileset dir="${jboss.dir}/client" includes="jbossall-client.jar" />
        <fileset dir="${jboss.dir}/server/default/lib" includes="servlet-api.jar" />
      </javac-classpath>
    </compile-exploded-war-macro>
  </target>

  <target name="build" description="compile (generate, copy, etc) all build outputs">
    <antcall target="_build" />
    <kick-jboss-macro />
  </target>

  <target name="setup" description="run all the one-time-only steps - like copying libs into place">
    <get-libs-macro todir="${output.dir}/WEB-INF/lib">
      <libs-list>
        <get-lib-macro repo="75.101.150.249/repo" group="commons-logging" artifact="commons-logging" version="1.1-dev" type="jar"/>
        <get-lib-macro repo="repo1.maven.org/maven2" group="junit" artifact="junit" version="3.8.1" type="jar" />
        <get-lib-macro repo="75.101.150.249/repo" group="junitee" artifact="junitee" version="1.11" type="jar" />
      </libs-list>
    </get-libs-macro>
  </target>

  <target name="teardown" description="undo whatever setup did" depends="clean">
  </target>
</project>
