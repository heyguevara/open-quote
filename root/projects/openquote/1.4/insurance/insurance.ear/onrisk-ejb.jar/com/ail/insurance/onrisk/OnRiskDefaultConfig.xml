<?xml version="1.0" encoding="UTF-8"?>
<!--
 This file defines the default configuration used by the OnRisk EJB component.
-->
<configuration xsi:noNamespaceSchemaLocation="http://www.appliedindustriallogic.com/schemas/Configuration.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <name>OnRisk EJB configuration</name>
    <timeout>-1</timeout>
    <who>factory</who>
    <version>$Revision: 1.4 $</version>
    <types>
        <!-- Generate Invoice binding -->
        <service name="GenerateInvoiceService" builder="ClassBuilder" key="com.ail.core.command.ClassAccessor">
            <parameter name="ServiceClass">com.ail.insurance.onrisk.invoice.GenerateInvoiceService</parameter>
        </service>
        <!-- Generate Wording binding -->
        <service name="GenerateWordingService" builder="ClassBuilder" key="com.ail.core.command.ClassAccessor">
            <parameter name="ServiceClass">com.ail.insurance.onrisk.wording.GenerateWordingService</parameter>
        </service>
        <!-- Generate Certificate  binding -->
        <service name="GenerateCertificateService" builder="ClassBuilder" key="com.ail.core.command.ClassAccessor" >
            <parameter name="ServiceClass">com.ail.insurance.onrisk.certificate.GenerateCertificateService</parameter>
        </service>
        
        <command name="GenerateInvoice" builder="ClassBuilder" key="com.ail.insurance.onrisk.invoice.GenerateInvoiceCommand" >
            <parameter name="Service">GenerateInvoiceService</parameter>
        </command>
        <command name="GenerateWording" builder="ClassBuilder" key="com.ail.insurance.onrisk.wording.GenerateWordingCommand" >
            <parameter name="Service">GenerateWordingService</parameter>
        </command>
        <command name="GenerateCertificate" builder="ClassBuilder" key="com.ail.insurance.onrisk.certificate.GenerateCertificateCommand">
            <parameter name="Service">GenerateCertificateService</parameter>
        </command>
    </types>
</configuration>
