<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" 
  xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

  <portlet>
    <description>AIL System Configure</description>
    <portlet-name>ConfigurePortlet</portlet-name>
    <display-name>Configure</display-name>
    <portlet-class>org.apache.myfaces.portlet.MyFacesGenericPortlet</portlet-class>
    <init-param>
      <name>default-view</name>
      <value>/pages/list.jsp</value>
    </init-param>
    <expiration-cache>-1</expiration-cache>

    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>VIEW</portlet-mode>
    </supports>

    <portlet-info>
      <title>Configure Portlet</title>
      <short-title>Configure Portlet</short-title>
      <keywords>Configure, Portlet</keywords>
    </portlet-info>

    <security-role-ref>
      <role-name>Developer</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>Admin</role-name>
    </security-role-ref>
  </portlet>

  <portlet>
    <description>AIL configurataion upload portlet</description>
    <portlet-name>ConfigureUploadPortlet</portlet-name>
    <portlet-class>com.ail.core.ui.ConfigureUploadPortlet</portlet-class>
    <supported-locale>en</supported-locale>
    <!-- <resource-bundle>Resource</resource-bundle> -->
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>VIEW</portlet-mode>
    </supports>

    <portlet-info>
      <title>Configure Upload Portlet</title>
    </portlet-info>

    <security-role-ref>
      <role-name>Developer</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>Admin</role-name>
    </security-role-ref>
  </portlet>

  <portlet>
    <description>AIL Configuration download portlet</description>
    <portlet-name>ConfigureDownloadPortlet</portlet-name>
    <display-name>Configure Download Portlet</display-name>
    <portlet-class>org.apache.myfaces.portlet.MyFacesGenericPortlet</portlet-class>
    <init-param>
      <name>default-view</name>
      <value>/pages/download.jsp</value>
    </init-param>
    <expiration-cache>-1</expiration-cache>
        
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>VIEW</portlet-mode>
    </supports>
        
    <portlet-info>
      <title>Configure Download Portlet</title>
      <short-title>Configure Download Portlet</short-title>
      <keywords>Configure, Portlet, Download, AIL</keywords>
    </portlet-info>

    <security-role-ref>
      <role-name>Developer</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>Admin</role-name>
    </security-role-ref>
  </portlet>
</portlet-app>
