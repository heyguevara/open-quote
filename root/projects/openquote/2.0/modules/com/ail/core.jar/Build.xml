<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- Build file for the core jar project -->

<project default="build" name="openquote:modules/com/ail/core.jar">
	<import file="../../../../BuildSettings.xml" />

	<target name="clean" description="delete everything that the build can generate">
		<delete-exploded-jar-macro />
	</target>

	<target name="_build">
		<compile-exploded-jar-macro>
			<javac-classpath>
				<fileset dir="${module.dir}/com/ail/core/main" includes="*.jar" />
				<fileset dir="${module.dir}/com/liferay/portal/main" includes="portlet.jar" />
				<fileset dir="${module.dir}/javax/xml/rpc/api/main" includes="jboss-jaxrpc-api_1.1_spec-1.0.0.Final.jar" />
				<fileset dir="${module.dir}/org/apache/httpcomponents/main" includes="httpcore-4.1.4.jar" />
				<fileset dir="${module.dir}/org/apache/httpcomponents/main" includes="httpclient-4.1.2.jar" />
				<fileset dir="${jboss.dir}/bin/client" includes="jboss-client.jar" />
			</javac-classpath>
		</compile-exploded-jar-macro>

		<generate-module-descriptor-macro dependencies="com.liferay.portal, javax.jms.api, javax.xml.rpc.api, javax.ejb.api, org.apache.xalan, org.apache.httpcomponents" />

	</target>

	<target name="build" description="compile (generate, copy, etc) all build outputs">
		<antcall target="_build" />
		<kick-liferay-macro />
	</target>

	<target name="setup" description="run all the one-time-only steps - like copying libs into place">
		<update-module-dependencies-macro />
	</target>

	<target name="teardown" description="undo whatever setup did">
	</target>
</project>
