<?xml version="1.0" encoding="UTF-8"?>
<!--
 This file defines the default (factory) configuration use by ListProducts service.
 The configuration defines the products that are know to the system.
-->
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:noNamespaceSchemaLocation="http://www.appliedindustriallogic.com/schemas/Configuration.xsd">
    <name>ProductCatalog configuration</name>
    <timeout>-1</timeout>
    <who>factory</who>
    <version>$Revision$</version>
    <manager>com.ail.core.product.listproducts.ListProductsService</manager>
    
    <group name="products">
        <parameter name="AIL.Base">Root of the product tree. All products extend this product.</parameter>
        <parameter name="AIL.Demo.MotorPlus">Demonstration of a multisection, multiasset product.</parameter>
        <parameter name="AIL.Demo.EquinePlus">Demonstration of a multisection, multiasset product.</parameter>
        <parameter name="AIL.Demo.IrishBrokerPI">Professional Indemnity product developed in conjunction with a London City broker.</parameter>
    </group>
</configuration>
