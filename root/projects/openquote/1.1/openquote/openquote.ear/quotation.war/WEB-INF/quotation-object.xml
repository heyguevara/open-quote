<deployments>
    <deployment>
        <parent-ref />
        <if-exists>keep</if-exists>
        <portal>
            <properties>
                <property>
                    <name>theme.id</name>
                    <value>openquotedemo</value>
                </property>
            </properties>
            <portal-name>quote</portal-name>
            <supported-modes>
                <mode>view</mode>
                <mode>edit</mode>
                <mode>help</mode>
            </supported-modes>
            <supported-window-states>
                <window-state>normal</window-state>
                <window-state>minimized</window-state>
                <window-state>maximized</window-state>
            </supported-window-states>
            <security-constraint>
                <policy-permission>
                    <action-name>viewrecursive</action-name>
                    <action-name>personalizerecursive</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>

            <page>
                <page-name>MotorPlus</page-name>
                <properties>
                    <property>
                        <name>layout.id</name>
                        <value>quotation</value>
                    </property>
                </properties>
                <window>
                    <window-name>QuoteWindow</window-name>
                    <instance-ref>MotorPlusQuotationPortletInstance</instance-ref>
                    <default>true</default>
                    <region>center</region>
                    <height>1</height>
                    <properties>
                        <property>
                            <name>theme.windowRendererId</name>
                            <value>emptyRenderer</value>
                        </property>
                        <property>
                            <name>theme.decorationRendererId</name>
                            <value>emptyRenderer</value>
                        </property>
                    </properties>
                </window>
            </page>

            <page>
                <page-name>EquinePlus</page-name>
                <properties>
                    <property>
                        <name>layout.id</name>
                        <value>quotation</value>
                    </property>
                </properties>
                <window>
                    <window-name>QuoteWindow</window-name>
                    <instance-ref>EquinePlusQuotationPortletInstance</instance-ref>
                    <default>true</default>
                    <region>center</region>
                    <height>1</height>
                    <properties>
                        <property>
                            <name>theme.windowRendererId</name>
                            <value>emptyRenderer</value>
                        </property>
                        <property>
                            <name>theme.decorationRendererId</name>
                            <value>emptyRenderer</value>
                        </property>
                    </properties>
                </window>
            </page>
        </portal>
    </deployment>
</deployments>
