<?xml version="1.0" standalone="yes"?>

<!DOCTYPE deployments PUBLIC "-//JBoss Portal//DTD Portlet Instances 2.6//EN" "http://www.jboss.org/portal/dtd/portlet-instances_2_6.dtd">

<deployments>
   <deployment>
      <instance>
         <display-name xml:lang="en">RSS portlet for SourceForge feeds</display-name>
         <instance-id>NewsReaderPortletInstance</instance-id>
         <portlet-ref>NewsReaderPortlet</portlet-ref>
         <preferences>
            <preference>
               <name>expires</name>
               <value>180</value>
            </preference>
            <preference>
               <name>RssXml</name>
               <value>http://sourceforge.net/export/rss2_projnews.php?group_id=215808</value>
            </preference>
         </preferences>
      </instance>
   </deployment>
</deployments>