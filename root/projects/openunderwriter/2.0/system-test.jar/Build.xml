<?xml version="1.0" encoding="ISO-8859-1"?>
<project default="build" name="openquote:system-test.jar">
  <import file="../BuildSettings.xml" />

  <target name="clean" description="delete everything that the build can generate" />

  <target name="build" description="compile (generate, copy, etc) all build outputs" />

  <target name="_build" />

  <target name="setup" description="run all the one-time-only steps - like copying libs into place">
    <update-dependencies-macro todir="${test.dir}/lib" />
  </target>

  <target name="teardown" description="undo whatever setup did" />

  <target name="_test" description="run tests defined in this project">
    <run-system-tests-macro name="demo product accessibility" />
    <run-system-tests-macro name="test menu access rights" />
    <run-system-tests-macro name="feedback" />
    <run-system-tests-macro name="organisation administrator access" />
    <run-system-tests-macro name="report access" />
  </target>

  <target name="test" description="run tests defined in this project">
    <parallel>
      <start-liferay-macro />

      <sequential>
        <wait-for-liferay-to-start-macro />

        <sleep minutes="1" />

        <antcall target="_test" />
        
        <stop-liferay-macro />

        <if>
          <or>
            <istrue value="${system-test-errored}" />
            <istrue value="${system-test-failed}" />
          </or>
          <then>
            <fail message="System test errors/failures" />
          </then>
        </if>

      </sequential>
    </parallel>
  </target>
</project>
