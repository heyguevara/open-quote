import com.ail.pageflow.ExecutePageActionService.ExecutePageActionArgument;
import com.ail.insurance.policy.Policy;

public class CommandButtonActionPolicyUpdateService {
    public static void invoke(ExecutePageActionArgument args) {
        
    	Policy policy = (Policy) args.getModelArgRet();

        String quoteNumber = (String) policy.xpathGet("/asset[id='commandActionButton']/attribute[id='quoteNumberOverride']/value");
        
        if (quoteNumber!=null && quoteNumber.length()!=0) {
        	policy.setQuotationNumber(quoteNumber);
        }
    }
}